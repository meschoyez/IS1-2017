        <script>
            $("#submit").click(function()
            {
                if($('#firstname').val() == '' || $('#lastname').val()=='' || $('#user').val()=='' || $('#password').val() == '')
                {
                    alert('Fill empty input');
                    $("#form").trigger("reset");
                }
                else
                {
                    if($("#password").val().length<8)
                    {
                        alert("Password too short");
                        $("#form").trigger("reset");
                    }
                    else
                    {    
                        alert("User saved");
                        window.open("login.html","_self")
                    }
                }
            });

        </script>
