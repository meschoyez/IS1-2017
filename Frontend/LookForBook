    <script>
      
      $("#search").click(function()
      {
        if($('#title').val() == '' && $('#author').val()=='' && $('#publisher').val()=='' && $('#edition').val() == '')
        {
          alert('Fill one input please');
          createTable();
        }
        else
        {
          alert("Book found.");
          createTable();
        }
      });

      function createTable() 
      {

          $("#container").append ('<table style="width:100%">'+ 
          '<tr><th>Title</th><th>Author</th><th>Publisher</th><th>Edition</th></tr>' +
          '<tr><td>Jill</td><td>Smith</td> <td>50</td><td>lal</td></tr>' +
          '<tr><td>Eve</td><td>Jackson</td> <td>94</td><td>lel</td></tr>' +
          '</table>')  
  
      }

    </script>
